{
    "$id": "https://github.com/sharvenp/pxl/blob/main/src/schema/schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Schema for .pxl project save state",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "description": "Version of the save state"
        },
        "tools": {
            "type": "object",
            "properties": {
                "selected-tool": {
                    "$ref": "#/$defs/tool-id"
                },
                "states": {
                    "type": "array",
                    "description": "State of tools",
                    "items": {
                        "type": "object",
                        "properties": {
                            "tool": {
                                "$ref": "#/$defs/tool-id"
                            },
                            "state": {
                                "type": "object",
                                "description": "State of the tool",
                                "oneOf": [
                                    {
                                        "$ref": "#/$defs/pencil-state"
                                    },
                                    {
                                        "$ref": "#/$defs/eraser-state"
                                    },
                                    {
                                        "$ref": "#/$defs/fill-state"
                                    },
                                    {
                                        "$ref": "#/$defs/rectangle-state"
                                    },
                                    {
                                        "$ref": "#/$defs/ellipse-state"
                                    },
                                    {
                                        "$ref": "#/$defs/line-state"
                                    },
                                    {
                                        "$ref": "#/$defs/shade-state"
                                    }
                                ]
                            }
                        },
                        "required": [
                            "tool",
                            "state"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "version",
        "tools"
    ],
    "additionalProperties": false,
    "$defs": {
        "tool-id": {
            "type": "string",
            "description": "Possile tool ids",
            "enum": [
                "Pencil",
                "Eraser",
                "Picker",
                "Fill",
                "Rectangle",
                "Ellipse",
                "Line",
                "Shade",
                "Select",
                "Clone"
            ]
        },
        "pencil-state": {
            "type": "object",
            "description": "State of the pencil tool",
            "properties": {
                "width": {
                    "type": "number",
                    "description": "Width of the pencil",
                    "minimum": 1,
                    "maximum": 10,
                    "multipleOf": 1
                }
            },
            "required": [
                "width"
            ],
            "additionalProperties": false
        },
        "eraser-state": {
            "type": "object",
            "description": "State of the eraser tool",
            "properties": {
                "width": {
                    "type": "number",
                    "description": "Width of the eraser",
                    "minimum": 1,
                    "maximum": 10,
                    "multipleOf": 1
                },
                "opacity": {
                    "type": "number",
                    "description": "Opacity of the eraser",
                    "minimum": 0,
                    "maximum": 100,
                    "multipleOf": 1
                }
            },
            "required": [
                "width",
                "opacity"
            ],
            "additionalProperties": false
        },
        "fill-state": {
            "type": "object",
            "description": "State of the fill tool",
            "properties": {
                "tolerance": {
                    "type": "number",
                    "description": "tolerance of fill",
                    "minimum": 0,
                    "maximum": 100,
                    "multipleOf": 1
                }
            },
            "required": [
                "tolerance"
            ],
            "additionalProperties": false
        },
        "rectangle-state": {
            "type": "object",
            "description": "State of the rectangle tool",
            "properties": {
                "width": {
                    "type": "number",
                    "description": "Width of the rectangle",
                    "minimum": 1,
                    "maximum": 10,
                    "multipleOf": 1
                },
                "fill": {
                    "type": "boolean",
                    "description": "Whether to fill the rectangle or not"
                }
            },
            "required": [
                "width",
                "fill"
            ],
            "additionalProperties": false
        },
        "ellipse-state": {
            "type": "object",
            "description": "State of the ellipse tool",
            "properties": {
                "width": {
                    "type": "number",
                    "description": "Width of the ellipse",
                    "minimum": 1,
                    "maximum": 10,
                    "multipleOf": 1
                },
                "fill": {
                    "type": "boolean",
                    "description": "Whether to fill the ellipse or not"
                }
            },
            "required": [
                "width",
                "fill"
            ],
            "additionalProperties": false
        },
        "line-state": {
            "type": "object",
            "description": "State of the line tool",
            "properties": {
                "thickness": {
                    "type": "number",
                    "description": "Thickness of the line",
                    "minimum": 1,
                    "maximum": 5,
                    "multipleOf": 1
                }
            },
            "required": [
                "thickness"
            ],
            "additionalProperties": false
        },
        "shade-state": {
            "type": "object",
            "description": "State of the shade tool",
            "properties": {
                "mode": {
                    "type": "string",
                    "description": "Mode of the shade tool",
                    "enum": [
                        "Lighten",
                        "Darken"
                    ]
                },
                "strength": {
                    "type": "number",
                    "description": "Strength of the shade tool",
                    "minimum": 0,
                    "maximum": 10,
                    "multipleOf": 1
                },
                "width": {
                    "type": "number",
                    "description": "Width of the shade tool",
                    "minimum": 1,
                    "maximum": 10,
                    "multipleOf": 1
                }
            },
            "required": [
                "mode",
                "strength",
                "width"
            ],
            "additionalProperties": false
        }
    }
}